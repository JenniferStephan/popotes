<div class="container">
  <div class="m-4">
      <h1>My orders</h1>
  </div>

  <% @my_orders.each do |order| %>
    <div class="card-items d-flex align-items-center justify-content-between">
      <div class="card-right-part d-flex">
          <%= cl_image_tag order.meal.photo, crop: :fill %>
          <div class="card-item-infos">
            <h2><%= order.meal.name %></h2>
            <h5>🗓 Ordered on the <strong><%= order.pick_up_date %></strong></h5>
            <h5>Cooked with ❤️ by <strong><%= order.user.username %></strong></h5>
            <h5>To be shared with <strong><%= pluralize(order.order_quantity, 'friend') %></strong> 👨‍👩‍👧 </h5>
            <h2><%= order.order_quantity * order.meal.unit_price%> euros</h2>
          </div>
        </div>
        <div class="review-order">
          <%= link_to new_meal_review_path(order.meal), class: "button" do %>
            <i class="fas fa-user-edit"></i>
            Add a review
          <% end %>
        </div>
    </div>
  <% end %>
</div>
