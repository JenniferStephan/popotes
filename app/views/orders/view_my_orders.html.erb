<div class="container-orders-detail">
  <h1>My orders</h1>
    <% @my_orders.each do |order| %>
      <div class="my-orders-red">

        <div class="my-orders-pic-crop">
          <%= cl_image_tag order.meal.photo, crop: :fill %>
        </div>

        <div class="my-orders-info-details">

          <div class="my-orders-info-details-text">
            <h2><%= order.meal.name %></h2>
            <h5>🗓 Ordered on the <strong><%= order.pick_up_date %></strong></h5>
            <h5>Cooked with ❤️ by <strong><%= order.meal.user.username %></strong></h5>
            <h5>To be shared with <strong><%= order.order_quantity %></strong> friends 👨‍👩‍👧 </h5>

            <div class="order-price-and-status">

              <div class="order-price-details">
                <h2><%= order.order_quantity * order.meal.unit_price%> euros</h2>
              </div>

              <span class="my-order-status"> <%= order.status %></span>
              </div>

            </div>
          </div>

          <div class="my-orders-review-display">
            <%= link_to new_meal_review_path(order.meal), class: "button" do %>
            <i class="fas fa-user-edit"></i>
            Add a review
          <% end %>
          </div>
        </div>
      <% end %>
    </div>

